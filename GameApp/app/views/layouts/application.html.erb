<!DOCTYPE html>
<html>
<head>
  <title>GameApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="banner">
  </div>
  <div class="container">
    <div class="header">
      <div class="row">


        <div class="span9">
          <h1>Project Portal 1.0</h1>
        </div>
        <div class="popup_login span3">
            <% if current_user %>
              <div class="coolrecipe logged-in">Logged in as <%= current_user.username %>
              </div>
            <% end %>
        </div>
      </div>

      <div class="navbar navbar-inverse">
        <nav class="navbar-inner">
          <ul class ="nav">
            <li class="active"><%= link_to("Home", new_game_path) %></li>
            <li><%= link_to("New Game", new_game_path ) %></li>
            <li><%= link_to("Load Game", games_path) %></li>
            <li><%= link_to('Users', users_path)  %></li>
            <li><%= link_to('Leaderboard', users_path)  %></li>
            <% if current_user %>
            <li><%= link_to('Your profile', users_path)  %></li>
            <% end %>
       <!--      <li>< %= link_to('Search', new_search_path)  %></li> -->
            <li><%= link_to('Sign up', new_user_path)  %></li>
            <li><% if current_user %><%= link_to 'Logout', session_path(session), method: :delete, data: { confirm: 'Are you sure?' } %>
              <% else %>
              <%= link_to 'Login', login_path %>
              <% end %>
            </li>
          </ul>
        </nav>
      </div>
    </div>

<!-- <div class="span8 offset1">
  < % flash.each do |key, value| %>
    < %= content_tag(:div, value, class: "alert alert-#{key}") %>
  < % end %>
</div> -->

<%= yield %>
</div>
</body>
</html>