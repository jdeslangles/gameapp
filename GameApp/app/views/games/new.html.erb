<h3>Hope you're ready for some serious TicTacToe action...</h3>
<br>
<br>
<div class="center">
  <div class="row">
    <div class="span5 offset1">
      <div class="coolrecipe links">
            <h3>Single Player</h3>
            <p>Select your opponent!</p>
              <br>
              <%= form_tag games_path, method: :post do %>
                  <%=
                      select_tag "user_id", options_from_collection_for_select(User.all, "id", "username")
                    %>
                <br>
                <%= submit_tag "Challenge Computer!", class:"btn btn-success btn-large" %>
              <%= form_tag games_path, method: :post %>
              <% end %>
        </div>
    </div>
    <div class="span5">
      <div class="coolrecipe links">
      <h3>Player vs. Player</h3>
        <p>Select your opponent!</p>
          <br>
          <%= form_tag games_path, method: :post do %>
            <%=
                select_tag "user_id", options_from_collection_for_select(User.all, "id", "username")
              %>
          <br>
          <%= submit_tag "Challenge Player!", class:"btn btn-success btn-large" %>
          <% end %>
      </div>
    </div>
  </div>
</div>
