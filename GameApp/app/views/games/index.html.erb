<h3>Listing games</h3>
<br>
<div class="row">
  <div class="span7 offset1">
    <div class="coolrecipe">
      <table class="table">
        <tr>
          <th>Player 1</th>
          <th>Player 2</th>
          <th>Status</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>

      <% @games.each do |game| %>
        <tr>
          <td><%= game_player_name(game, 0) %></td>
          <td><%= game_player_name(game, 1) %></td>
          <td><%= if game.game_result
                              game.game_result
                            else
                              "Ongoing"
                            end %></td>
          <td><%= link_to 'Show', game, class:"btn btn-info btn-mini" %></td>
          <td><%= link_to 'Edit', edit_game_path(game), class:"btn btn-warning btn-mini" %></td>
          <% if can? :destroy, game %>
            <td><%= link_to 'Destroy', game, class:"btn btn-danger btn-mini", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>
<br />
<div class="links">
<%= link_to 'New Game', new_game_path %>
</div>
